<h1>Új névjegy felvétele</h1>
<form class="form-horizontal col-lg-8 col-lg-offset-2"
      method="post" action="/add">
    <div class="form-group">
      <label for="nev" class="col-lg-2 control-label">Név: </label>
      <div class="col-lg-10">
        <input type="text"
               class="form-control" 
               name="nev" id="nev">
      </div>
    </div>
    <div class="form-group">
      <label for="foglalkozas" class="col-lg-2 control-label">Foglalkozás: </label>
      <div class="col-lg-10">
        <input type="text"
               class="form-control" 
               name="foglalkozas" id="foglalkozas">
      </div>
    </div>
    <div class="form-group">
      <label for="telefonszam" class="col-lg-2 control-label">Telefonszám: </label>
      <div class="col-lg-10">
        <input type="text"
               class="form-control" 
               name="telefonszam" id="telefonszam">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="reset" class="btn btn-default pull-left">Mégse</button>
        <button type="submit" class="btn btn-success pull-right">Hozzáadás</button>
      </div>
    </div>
</form>